-- –£—Å—Ç–∞–Ω–æ–≤–∫–∞ –∫–æ–¥–∏—Ä–æ–≤–∫–∏ UTF-8
vim.opt.encoding = "utf-8"
vim.opt.fileencodings = "utf-8,latin1"


-- –í–∫–ª—é—á–∞–µ–º –ø–æ–¥—Å–≤–µ—Ç–∫—É —Å–∏–Ω—Ç–∞–∫—Å–∏—Å–∞
vim.cmd("syntax on")

-- –ò—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –ø—Ä–æ–±–µ–ª—ã –≤–º–µ—Å—Ç–æ —Ç–∞–±–æ–≤ –∏ –∑–∞–¥–∞—Ç—å —à–∏—Ä–∏–Ω—É —Ç–∞–±–∞
vim.opt.expandtab = true
vim.opt.shiftwidth = 4
vim.opt.tabstop = 4
vim.opt.number = true
vim.opt.cursorline = true
vim.opt.clipboard = "unnamedplus"
vim.opt.mouse = "a"
vim.opt.ignorecase = true
vim.opt.smartcase = true
vim.opt.undofile = true
vim.opt.updatetime = 300
vim.opt.shadafile = "shada/main.shada"

vim.opt.backspace = { "indent", "eol", "start" }


-- DOCKER 
-- Docker - run —Å–±–æ—Ä–∫–∞ –∏ –∑–∞–ø—É—Å–∫
vim.api.nvim_create_user_command('DockerRun', function()
  local cwd = vim.fn.expand('%:p:h')
  vim.cmd('!cd ' .. cwd .. ' && docker-compose up --build')
end, {})

-- Docker - build —Å–±–æ—Ä–∫–∞
vim.api.nvim_create_user_command('DockerBuild', function()
  local cwd = vim.fn.expand('%:p:h')
  vim.cmd('!cd ' .. cwd .. ' && docker-compose build')
end, {})

-- Docker - stop –æ—Å—Ç–∞–Ω–æ–≤–∫–∞
vim.api.nvim_create_user_command('DockerStop', function()
  local cwd = vim.fn.expand('%:p:h')
  vim.cmd('!cd ' .. cwd .. ' && docker-compose down')
end, {})

-- Docker - clear –æ—á–∏—Å—Ç–∫–∞
vim.api.nvim_create_user_command('DockerClear', function()
  local cwd = vim.fn.expand('%:p:h')
  vim.cmd('!cd ' .. cwd .. ' && docker system prune -f')
end, {})

-- Docker - clear run –æ—á–∏—Å—Ç–∫–∞ –∏ –∑–∞–ø—É—Å–∫
vim.api.nvim_create_user_command('DockerClearRun', function()
  local cwd = vim.fn.expand('%:p:h')
  vim.cmd('!cd ' .. cwd .. ' && docker system prune -f && docker-compose up --build')
end, {})

-- Docker name -run –∑–∞–ø—É—Å–∫ –ø—Ä–æ–µ–∫—Ç–∞ —Å –∏–º–µ–Ω–µ–º
vim.api.nvim_create_user_command('DockerNameRun', function(opts)
  local cwd = vim.fn.expand('%:p:h')
  vim.cmd('!cd ' .. cwd .. ' && docker-compose -f docker-compose.' .. opts.args .. '.yml up --build')
end, {nargs = 1})





-- –ê–≤—Ç–æ—Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –ø—Ä–∏ –ø–æ—Ç–µ—Ä–µ —Ñ–æ–∫—É—Å–∞
vim.cmd("autocmd FocusLost * silent! wa")

-- –æ—Ç–∫—Ä—ã—Ç—å —Ç–µ—Ä–º–∏–Ω–∞–ª —Å–Ω–∏–∑—É Ctrl+T
vim.api.nvim_set_keymap("n", "<C-T>", ":split | resize 10 | terminal<CR>", { noremap = true, silent = true })

-- –∑–∞–∫—Ä—ã—Ç—å —Ç–µ—Ä–º–∏–Ω–∞–ª Ctrl+Q
vim.api.nvim_set_keymap("t", "<C-Q>", "<C-\\><C-N>:q<CR>", { noremap = true, silent = true })

-- –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ –º–µ–∂ —Ç–µ—Ä–º–∏–Ω–∞–ª–æ–º –∏ —Ä–µ–¥–∞–∫—Ç–æ—Ä–æ–º Ctrl+Space
vim.api.nvim_set_keymap("t", "<C-Space>", "<C-\\><C-N>", { noremap = true, silent = true })
vim.api.nvim_set_keymap("n", "<C-Space>", "i", { noremap = true, silent = true })

-- –∑–∞–∫—Ä—ã—Ç—å —Ñ–∞–π–ª  –ó–∞–∫—Ä—ã—Ç—å —Ñ–∞–π–ª
vim.api.nvim_set_keymap("n", "<C-W>", ":q<CR>", { noremap = true, silent = true })


-- –ü–æ–∏—Å–∫ –≤ —Ñ–∞–π–ª–µ Ctrl+F
vim.api.nvim_set_keymap("n", "<C-F>", "/", { noremap = true })


-- –£–¥–∞–ª–µ–Ω–∏—è

-- –£–¥–∞–ª–µ–Ω–∏–µ —Å–ª–æ–≤–∞ —Å–ª–µ–≤–∞ –ø—Ä–∏ –Ω–∞–∂–∞—Ç–∏–∏ Shift + Backspace
vim.api.nvim_set_keymap('i', '<S-BS>', '<C-w>', { noremap = true, silent = true })
vim.api.nvim_set_keymap('n', '<S-BS>', 'db', { noremap = true, silent = true })

-- –£–¥–∞–ª–µ–Ω–∏–µ –≤—Å–µ–π —Å—Ç—Ä–æ–∫–∏ –ø—Ä–∏ –Ω–∞–∂–∞—Ç–∏–∏ Ctrl + Shift + Backspace
vim.api.nvim_set_keymap('i', '<C-S-BS>', '<Esc>ddi', { noremap = true, silent = true })
vim.api.nvim_set_keymap('n', '<C-S-BS>', 'dd', { noremap = true, silent = true })


vim.api.nvim_set_keymap('n', 'F', ':Ex<CR>', { noremap = true, silent = true })


-- –æ—Ç–∫—Ä—ã—Ç–∏–µ –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏–∏ —Ñ–∞–π–ª–∞ –≤ –∫–æ—Ç–æ—Ä–æ–º —Ç—ã –Ω–∞—Ö–æ–¥–∏—à—å—Å—è 
vim.api.nvim_create_user_command('ExUp', function()
  local bufname = vim.api.nvim_buf_get_name(0) -- –ü–æ–ª—É—á–∞–µ–º –ø–æ–ª–Ω—ã–π –ø—É—Ç—å –∫ —Ñ–∞–π–ª—É
  if bufname == "" then
    print("–§–∞–π–ª –Ω–µ –æ—Ç–∫—Ä—ã—Ç")
    return
  end
  local file_dir = vim.fn.fnamemodify(bufname, ':h') -- –ë–µ—Ä—ë–º –µ–≥–æ –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é
  local parent_dir = vim.fn.fnamemodify(file_dir, ':h') -- –ü–æ–¥–Ω–∏–º–∞–µ–º—Å—è –Ω–∞ —É—Ä–æ–≤–µ–Ω—å –≤—ã—à–µ
  vim.cmd('e ' .. parent_dir) -- –û—Ç–∫—Ä—ã–≤–∞–µ–º —Ä–æ–¥–∏—Ç–µ–ª—å—Å–∫—É—é –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é —á–µ—Ä–µ–∑ ex
end, {})


-- –ø–µ—Ä–µ–∑–∞–≥—Ä—É–∑–∫–∞ LuaConf
vim.api.nvim_create_user_command("LuaBoot", function()
    vim.cmd("source $MYVIMRC")
    print("Lua config reloaded!")
end, {})

-- –£–ª—É—á—à–µ–Ω–Ω—ã–µ –∫–ª–∞–≤–∏—à–∏ –ø–µ—Ä–µ–¥–≤–∏–∂–µ–Ω–∏—è –º–µ–∂–¥—É –æ–∫–Ω–∞–º–∏ –∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ  
local keymap = vim.api.nvim_set_keymap  
local opts = { noremap = true, silent = true }  

keymap("n", "<C-h>", "<C-w>h", opts)  
keymap("n", "<C-j>", "<C-w>j", opts)  
keymap("n", "<C-k>", "<C-w>k", opts)  
keymap("n", "<C-l>", "<C-w>l", opts)  
keymap("n", "<C-s>", ":w<CR>", opts)  
keymap("i", "<C-s>", "<Esc>:w<CR>a", opts)  
keymap("v", "<C-s>", "<Esc>:w<CR>gv", opts)  

-- –ò—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å —Å–∏—Å—Ç–µ–º–Ω—ã–π –±—É—Ñ–µ—Ä –æ–±–º–µ–Ω–∞  
vim.opt.clipboard = "unnamedplus"  

-- –£–ª—É—á—à–µ–Ω–Ω—ã–µ —Å–æ—á–µ—Ç–∞–Ω–∏—è –¥–ª—è –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è, –≤—Å—Ç–∞–≤–∫–∏ –∏ –≤—ã—Ä–µ–∑–∞–Ω–∏—è  
keymap("v", "<C-c>", '"+y', opts) -- –ö–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ  
keymap("i", "<C-v>", '<C-r>+', opts) -- –í—Å—Ç–∞–≤–∫–∞ –≤ —Ä–µ–∂–∏–º–µ –≤—Å—Ç–∞–≤–∫–∏  
keymap("n", "<C-v>", '"+p', opts) -- –í—Å—Ç–∞–≤–∫–∞ –≤ –æ–±—ã—á–Ω–æ–º —Ä–µ–∂–∏–º–µ  
keymap("v", "<C-v>", '"+p', opts) -- –í—Å—Ç–∞–≤–∫–∞ –≤ —Ä–µ–∂–∏–º–µ –≤—ã–¥–µ–ª–µ–Ω–∏—è  
keymap("v", "<C-x>", '"+d', opts) -- –í—ã—Ä–µ–∑–∞–Ω–∏–µ  

-- –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–µ —Ö–æ—Ç–∫–µ–∏  
keymap("n", "<C-S-x>", "dd", opts) -- –í—ã—Ä–µ–∑–∞—Ç—å –≤—Å—é —Å—Ç—Ä–æ–∫—É  
keymap("n", "<C-S-c>", "yy", opts) -- –ö–æ–ø–∏—Ä–æ–≤–∞—Ç—å –≤—Å—é —Å—Ç—Ä–æ–∫—É  
keymap("n", "<C-z>", "u", opts) -- –û—Ç–º–µ–Ω–∞ –ø–æ—Å–ª–µ–¥–Ω–µ–≥–æ –¥–µ–π—Å—Ç–≤–∏—è  

-- –í—ã–¥–µ–ª–µ–Ω–∏–µ —Å–∏–º–≤–æ–ª–æ–≤
keymap("i", "<S-Left>", "<C-o>v<Left>", opts)
keymap("i", "<S-Right>", "<C-o>v<Right>", opts)
keymap("n", "<S-Left>", "v<Left>", opts)
keymap("n", "<S-Right>", "v<Right>", opts)

-- –í—ã–¥–µ–ª–µ–Ω–∏–µ —Å—Ç—Ä–æ–∫ (Shift + Up / Down)
keymap("i", "<S-Up>", "<C-o>V<Up>", opts)
keymap("i", "<S-Down>", "<C-o>V<Down>", opts)
keymap("n", "<S-Up>", "V<Up>", opts)
keymap("n", "<S-Down>", "V<Down>", opts)


-- –ë—ã—Å—Ç—Ä–æ–µ –≤—ã–¥–µ–ª–µ–Ω–∏–µ –ø–æ —Å–ª–æ–≤–∞–º
keymap("i", "<C-S-Left>", "<C-o>vB", opts)
keymap("i", "<C-S-Right>", "<C-o>vE", opts)
keymap("n", "<C-S-Left>", "vB", opts)
keymap("n", "<C-S-Right>", "vE", opts)

-- –ó–∞–ø—É—Å–∫ –∏ –±–∏–ª–¥ –ø—Ä–æ–µ–∫—Ç–∞ –ø—Ä–∏ –Ω–∞—Ö–æ–∂–¥–µ–Ω–∏–∏ –≤ –Ω–µ–º –∂–µ
-- –ë—ã—Å—Ç—Ä—ã–π –∑–∞–ø—É—Å–∫ —á–µ—Ä–µ–∑ CTRL + F5 –∏–ª–∏ –∂–µ –∫–æ–º–∞–Ω–¥—É Run
-- –§—É–Ω–∫—Ü–∏—è –¥–ª—è –∑–∞–ø—É—Å–∫–∞ –∫–æ–¥–∞ –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç —Ç–∏–ø–∞ —Ñ–∞–π–ª–∞
function RunCurrentFile()
  local filetype = vim.bo.filetype
  local filename = vim.fn.expand("%")

  if filetype == "go" then
    vim.cmd("!go run " .. filename)
  elseif filetype == "python" then
    vim.cmd("!python " .. filename)
  elseif filetype == "cs" then
    vim.cmd("!dotnet run")
  elseif filetype == "java" then
    vim.cmd("!javac " .. filename .. " && java " .. filename:gsub("%.java$", ""))
  else
    print("üö® –ù–µ–∏–∑–≤–µ—Å—Ç–Ω—ã–π —Ç–∏–ø —Ñ–∞–π–ª–∞: " .. filetype)
  end
end

-- –ü—Ä–∏–≤—è–∑—ã–≤–∞–µ–º –∫ Ctrl+F5
vim.api.nvim_set_keymap("n", "<C-F5>", ":lua RunCurrentFile()<CR>", { noremap = true, silent = true })

-- –ü—Ä–∏–≤—è–∑—ã–≤–∞–µ–º –∫ Run
vim.api.nvim_create_user_command("Run", RunCurrentFile, {})

-- –°–±–æ—Ä–∫–∞ –ø—Ä–æ–µ–∫—Ç–∞ —á–µ—Ä–µ–∑ –∫–æ–º–∞–Ω–¥—É Build
-- –§—É–Ω–∫—Ü–∏—è –¥–ª—è —Å–±–æ—Ä–∫–∏ —Ç–µ–∫—É—â–µ–≥–æ —Ñ–∞–π–ª–∞ –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç —è–∑—ã–∫–∞
function BuildCurrentFile()
  local filetype = vim.bo.filetype
  local cmd = ""

  if filetype == "go" then
    cmd = "go build %"
  elseif filetype == "python" then
    cmd = "echo 'Python –Ω–µ —Ç—Ä–µ–±—É–µ—Ç —Å–±–æ—Ä–∫–∏'"
  elseif filetype == "java" then
    cmd = "javac %"
  elseif filetype == "cs" then
    cmd = "dotnet build"
  else
    print("–ù–µ–∏–∑–≤–µ—Å—Ç–Ω—ã–π —Ç–∏–ø —Ñ–∞–π–ª–∞: " .. filetype)
    return
  end

  vim.cmd("!" .. cmd)
end

-- –°–æ–∑–¥–∞—ë–º –∫–æ–º–∞–Ω–¥—É :Build
vim.api.nvim_create_user_command("Build", BuildCurrentFile, {})


-- –£—Å—Ç–∞–Ω–æ–≤–∫–∞ packer.nvim (–µ—Å–ª–∏ –µ—â—ë –Ω–µ—Ç)
local ensure_packer = function()
  local fn = vim.fn
  local install_path = fn.stdpath("data") .. "/site/pack/packer/start/packer.nvim"
  if fn.empty(fn.glob(install_path)) > 0 then
    fn.system({
      "git", "clone", "--depth", "1",
      "https://github.com/wbthomason/packer.nvim", install_path
    })
    vim.cmd("packadd packer.nvim")
  end
end

ensure_packer()

-- –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –Ω—É–∂–Ω—ã–µ –ø–ª–∞–≥–∏–Ω—ã
require("packer").startup(function(use)
  use "wbthomason/packer.nvim" -- –ú–µ–Ω–µ–¥–∂–µ—Ä –ø–ª–∞–≥–∏–Ω–æ–≤

  -- LSP
  use "neovim/nvim-lspconfig" -- –ö–æ–Ω—Ñ–∏–≥ LSP
  use "williamboman/mason.nvim" -- –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∞—è —É—Å—Ç–∞–Ω–æ–≤–∫–∞ LSP —Å–µ—Ä–≤–µ—Ä–æ–≤
  use "williamboman/mason-lspconfig.nvim" -- –°–≤—è–∑–∫–∞ mason + lspconfig
  
  
  use 'DaikyXendo/nvim-material-icon'
  
  
  -- Explorer
  use {
    'nvim-tree/nvim-tree.lua',
    requires = {
      'nvim-tree/nvim-web-devicons', -- optional, for file icons
    },
  }

  -- –ê–≤—Ç–æ–¥–æ–ø–æ–ª–Ω–µ–Ω–∏–µ
  use "hrsh7th/nvim-cmp" -- –û—Å–Ω–æ–≤–Ω–æ–π –ø–ª–∞–≥–∏–Ω –∞–≤—Ç–æ–¥–æ–ø–æ–ª–Ω–µ–Ω–∏—è
  use "hrsh7th/cmp-nvim-lsp" -- –ò—Å—Ç–æ—á–Ω–∏–∫ –¥–ª—è LSP
  use "Mofiqul/dracula.nvim"
end)






-- Explorer
-- –ù–∞—Å—Ç—Ä–æ–π–∫–∞ nvim-tree
-- –§—É–Ω–∫—Ü–∏—è –¥–ª—è –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –ø—Ä–∏–≤—è–∑–æ–∫ –∫–ª–∞–≤–∏—à –≤ nvim-tree
local function my_on_attach(bufnr)
  local api = require("nvim-tree.api")

  local function set_root_to_node()
    local node = api.tree.get_node_under_cursor()
    if not node then return end -- –ó–∞—â–∏—Ç–∞ –æ—Ç nil
    if node.type == "directory" then
      api.tree.change_root(node.absolute_path)
    elseif node.type == "file" then
      api.node.open.edit(node)
    end
  end

  local function opts(desc)
    return { desc = "nvim-tree: " .. desc, buffer = bufnr, noremap = true, silent = true, nowait = true }
  end

  api.config.mappings.default_on_attach(bufnr)
  vim.keymap.set("n", "<CR>", set_root_to_node, opts("Set root to selected node"))
end



-- –ú–∏–Ω–∏–º–∞–ª—å–Ω–∞—è –Ω–∞—Å—Ç—Ä–æ–π–∫–∞ nvim-tree
require("nvim-tree").setup({
  on_attach = my_on_attach,
  view = {
    width = 30,
    side = "left",
  },
  filters = {
    dotfiles = false, -- –ù–µ –ø–æ–∫–∞–∑—ã–≤–∞—Ç—å —Å–∫—Ä—ã—Ç—ã–µ —Ñ–∞–π–ª—ã
  },
  actions = {
    open_file = {
      quit_on_open = false,
    },
  },
})






-- –ù–∞—Å—Ç—Ä–æ–π–∫–∞ nvim-tree
require('nvim-tree').setup({
  renderer = {
    icons = {
      show = {
        file = false,        -- –û—Ç–∫–ª—é—á–∞–µ–º –∏–∫–æ–Ω–∫–∏ —Ñ–∞–π–ª–æ–≤
        folder = true,       -- –í–∫–ª—é—á–∞–µ–º –∏–∫–æ–Ω–∫–∏ –ø–∞–ø–æ–∫
        folder_arrow = false,-- –û—Ç–∫–ª—é—á–∞–µ–º —Å—Ç—Ä–µ–ª–∫–∏ —Ä–∞—Å–∫—Ä—ã—Ç–∏—è
      },
      glyphs = {
        default = '',        -- –û—Å—Ç–∞–≤–ª—è–µ–º –ø—É—Å—Ç—ã–º
        symlink = '',        -- –û—Å—Ç–∞–≤–ª—è–µ–º –ø—É—Å—Ç—ã–º
        git = {
          unstaged = '‚úó',    -- –ù–µ–∏–Ω–¥–µ–∫—Å–∏—Ä–æ–≤–∞–Ω–Ω—ã–µ –∏–∑–º–µ–Ω–µ–Ω–∏—è
          staged = '‚úî',      -- –ò–Ω–¥–µ–∫—Å–∏—Ä–æ–≤–∞–Ω–Ω—ã–µ –∏–∑–º–µ–Ω–µ–Ω–∏—è
          untracked = '‚òÖ',   -- –ù–µ–æ—Ç—Å–ª–µ–∂–∏–≤–∞–µ–º—ã–µ —Ñ–∞–π–ª—ã
        },
        folder = {
          default = '‚ñ∂',     -- –ó–∞–∫—Ä—ã—Ç–∞—è –ø–∞–ø–∫–∞
          open = '‚ñº',        -- –û—Ç–∫—Ä—ã—Ç–∞—è –ø–∞–ø–∫–∞
          empty = '‚ñ∑',       -- –ü—É—Å—Ç–∞—è –∑–∞–∫—Ä—ã—Ç–∞—è –ø–∞–ø–∫–∞
          empty_open = '‚ñΩ',  -- –ü—É—Å—Ç–∞—è –æ—Ç–∫—Ä—ã—Ç–∞—è –ø–∞–ø–∫–∞
          symlink = '‚§∑',     -- –°–∏–º–≤–æ–ª–∏—á–µ—Å–∫–∞—è —Å—Å—ã–ª–∫–∞ –Ω–∞ –ø–∞–ø–∫—É
          symlink_open = '‚§∂',-- –û—Ç–∫—Ä—ã—Ç–∞—è —Å–∏–º–≤–æ–ª—å–Ω–∞—è —Å—Å—ã–ª–∫–∞
        },
      },
    },
    add_trailing = false,
    highlight_git = true,
  },
  -- –ö–∞—Å—Ç–æ–º–∏–∑–∞—Ü–∏—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è —á–µ—Ä–µ–∑ on_attach
  on_attach = function(bufnr)
    local api = require("nvim-tree.api")

    -- –§—É–Ω–∫—Ü–∏—è –¥–ª—è –∫–∞—Å—Ç–æ–º–Ω–æ–≥–æ —Ä–µ–Ω–¥–µ—Ä–∏–Ω–≥–∞ –∏–º–µ–Ω–∏ —Ñ–∞–π–ª–∞
    local function custom_renderer(node)
      if node.type == "file" then
        local ext = node.extension or "" -- –ü–æ–ª—É—á–∞–µ–º —Ä–∞—Å—à–∏—Ä–µ–Ω–∏–µ —Ñ–∞–π–ª–∞
        if ext ~= "" then
          return "." .. ext .. " " .. node.name -- –§–æ—Ä–º–∞—Ç: .py FileName.py
        end
        return node.name -- –ï—Å–ª–∏ –Ω–µ—Ç —Ä–∞—Å—à–∏—Ä–µ–Ω–∏—è, –ø—Ä–æ—Å—Ç–æ –∏–º—è
      end
      return node.name -- –î–ª—è –ø–∞–ø–æ–∫ –∏ –¥—Ä—É–≥–∏—Ö —Ç–∏–ø–æ–≤ –≤–æ–∑–≤—Ä–∞—â–∞–µ–º –∏–º—è –∫–∞–∫ –µ—Å—Ç—å
    end

    -- –ü–µ—Ä–µ—Ö–≤–∞—Ç—ã–≤–∞–µ–º —Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω—ã–µ –ø—Ä–∏–≤—è–∑–∫–∏
    local function opts(desc)
      return { desc = "nvim-tree: " .. desc, buffer = bufnr, noremap = true, silent = true, nowait = true }
    end

    api.config.mappings.default_on_attach(bufnr)

    -- –ü–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª—è–µ–º —Ä–µ–Ω–¥–µ—Ä–∏–Ω–≥
    vim.api.nvim_buf_set_option(bufnr, 'filetype', 'nvimtree')
    vim.api.nvim_create_autocmd("BufEnter", {
      buffer = bufnr,
      callback = function()
        local tree = api.tree.get_nodes()
        if tree then
          for _, node in ipairs(tree) do
            node.display = custom_renderer(node)
          end
          api.tree.reload()
        end
      end,
    })
  end,
})






-- –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è –Ω–∞ –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é —Ç–µ–∫—É—â–µ–≥–æ —Ñ–∞–π–ª–∞
local function toggle_file_directory()
  local api = require("nvim-tree.api")
  local current_file = vim.fn.expand("%:p")
  if current_file == "" then
    print("No file is currently open")
    return
  end

  local current_dir = vim.fn.fnamemodify(current_file, ":h")
  if api.tree.is_visible() then
    api.tree.change_root(current_dir)
  else
    api.tree.open({ path = current_dir })
  end
end

-- –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–µ –∏–∑–º–µ–Ω–µ–Ω–∏–µ –∫–æ—Ä–Ω—è –ø—Ä–∏ –æ—Ç–∫—Ä—ã—Ç–∏–∏ —Ñ–∞–π–ª–∞
vim.api.nvim_create_autocmd("BufEnter", {
  group = vim.api.nvim_create_augroup("NvimTreeAutoRoot", { clear = true }),
  callback = function()
    if vim.bo.buftype ~= "" then return end -- –ü—Ä–æ–ø—É—Å–∫–∞–µ–º –Ω–µ-—Ñ–∞–π–ª–æ–≤—ã–µ –±—É—Ñ–µ—Ä—ã
    local api = require("nvim-tree.api")
    local current_file = vim.fn.expand("%:p")
    if current_file ~= "" then
      local current_dir = vim.fn.fnamemodify(current_file, ":h")
      if api.tree.is_visible() then
        api.tree.change_root(current_dir)
      end
    end
  end,
})



-- –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–µ –æ—Ç–∫—Ä—ã—Ç–∏–µ nvim-tree –ø—Ä–∏ –∑–∞–ø—É—Å–∫–µ Neovim
vim.api.nvim_create_autocmd({ "VimEnter" }, { callback = function() require("nvim-tree.api").tree.open() end })


-- –ó–∞–≥—Ä—É–∂–∞–µ–º –ø–ª–∞–≥–∏–Ω—ã
require("mason").setup()
require("mason-lspconfig").setup()

-- –ù–∞—Å—Ç—Ä–æ–∏–º LSP
local lspconfig = require("lspconfig")

lspconfig.jdtls.setup{}   -- Java
lspconfig.omnisharp.setup{} -- C#
lspconfig.pyright.setup{} -- Python
lspconfig.jsonls.setup{} -- JSON
lspconfig.sqlls.setup{}  -- SQL

-- –ù–∞—Å—Ç—Ä–∞–∏–≤–∞–µ–º nvim-cmp
local cmp = require("cmp")

cmp.setup({
  mapping = {
    ["<C-Space>"] = cmp.mapping.complete(),
    ["<CR>"] = cmp.mapping.confirm({ select = true })
  },
  sources = {
    { name = "nvim_lsp" }
  }
})

